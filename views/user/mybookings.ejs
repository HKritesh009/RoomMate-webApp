<% layout("layouts/boilerplate") %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <%- include('sidebar') %>

    <!-- Main content -->
    <div class="col-lg-9 col-md-8 col-12 mt-4">
      <h2 class="mb-4">My Bookings</h2>

      <% if (bookings.length === 0) { %>
        <p class="text-muted">You haven't made any bookings yet.</p>
      <% } else { %>
        <div class="list-group">
          <% bookings.forEach(booking => { %>
            <a href="/listings/<%=booking.listing._id%>" class="list-group-item list-group-item-action mb-2 shadow-sm rounded">
              <div class="d-flex justify-content-between align-items-center">
                <strong><%= booking.listing.title %></strong>
                <small class="text-muted">Booked on: <%= booking.bookedDate.toDateString() %></small>
              </div>
              <div class="mt-1">
                Location: <%= booking.listing.location %> | Country: <%= booking.listing.country %>
              </div>
            </a>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>
</div>
