<!-- Font Awesome & Bootstrap CDN -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Navbar with Search and Profile -->
<!-- Navbar -->
<!-- Navigation + Profile in collapse for small screens -->
<style>
  /* Small screen collapse menu */
  @media (max-width: 991px) {
    #navbarNav {
      position: absolute;   /* overlay below navbar */
      top: 100%;            /* directly below navbar */
      left: 0;
      width: 100%;
      z-index: 999;
      transition: max-height;
      overflow: hidden;
      max-height: 0;         /* initially hidden */
    }
    #navbarNav.show {
      max-height: 500px;     /* adjust depending on menu items */
    }

}
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top px-3 py-2">
  <div class="container-fluid d-flex align-items-center justify-content-between">

    <!-- Logo -->
    <a class="navbar-brand d-flex align-items-center fw-bold fs-4" href="/">
      <i class="fa-solid fa-compass text-primary me-2" style="font-size:2rem;"></i>
      <span class="align-middle">RoomMATE</span>
    </a>

      <!-- Search dropdown centered -->

<meta name="viewport" content="width=device-width, initial-scale=1">

<li style="list-style: none ; font-size:2rem;" class="nav-item dropdown position-static">
  <a class="nav-link d-flex align-items-center gap-2" href="#" id="searchDropdown"
     role="button" data-bs-toggle="dropdown" aria-expanded="false">
    <i class="fa-solid fa-magnifying-glass"></i> 
  </a>

  <div class="dropdown-menu w-100 border-0 shadow mt-0" aria-labelledby="searchDropdown" data-mega>
    <div class="container py-3">  <!-- container controls width per breakpoint -->
      <form class="row g-3 align-items-end" action="/listings/search" method="GET">
        <div class="col-12 col-md-6 col-lg-4">
          <label class="form-label">Title</label>
          <input type="text" class="form-control" name="title" placeholder="Search by title">
        </div>
        <div class="col-12 col-md-6 col-lg-4">
          <label class="form-label">Country</label>
          <input type="text" class="form-control" name="country" placeholder="Country">
        </div>
        <div class="col-12 col-md-6 col-lg-4">
          <label class="form-label">Location</label>
          <input type="text" class="form-control" name="location" placeholder="Location">
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary w-100 w-md-auto">
            <i class="fa-solid fa-search me-2"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
</li>



    <!-- Hamburger -->
    <button class="navbar-toggler border-0 bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapse menu -->
    <div class="collapse navbar-collapse bg-white p-3 " id="navbarNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item"><a class="nav-link px-3 py-2" href="/listings">Home</a></li>
        <li class="nav-item"><a class="nav-link px-3 py-2" href="/listings/new">Create New</a></li>
        <li class="nav-item"><a class="nav-link px-3 py-2" href="/about">About</a></li>
      </ul>

      <!-- Profile/Login inside collapse for small screens -->
      <ul class="navbar-nav d-lg-none mt-3 border-top pt-2">
        <% if (currentUser) { %>
          <li class="nav-item"><a class="nav-link px-3 py-2" href="/user/dashboard">Profile</a></li>
          <li class="nav-item"><a class="nav-link px-3 py-2" href="/user/mylistings">My Listings</a></li>
          <li class="nav-item"><a class="nav-link px-3 py-2" href="/user/mybookings">My Bookings</a></li>
          <li class="nav-item"><a class="nav-link text-danger px-3 py-2" href="/logout">Logout</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link px-3 py-2" href="/listings/auth">Login</a></li>
          <li class="nav-item"><a class="nav-link px-3 py-2" href="/listings/auth">Sign Up</a></li>
        <% } %>
      </ul>
    </div>

    <!-- Profile for large screens -->
    <div class="d-none d-lg-flex align-items-center ms-auto flex-shrink-0">
      <% if (currentUser) { %>
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown" role="button"
             data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://i.pinimg.com/originals/56/76/98/56769812125804092bb97586797df1ea.jpg"
                 class="rounded-circle border border-primary" width="40" height="40" alt="User Avatar">
            <span class="d-none d-md-inline ms-2 fw-medium">Hi, <%= currentUser.username %></span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="profileDropdown">
            <li><a class="dropdown-item" href="/user/dashboard">Profile</a></li>
            <li><a class="dropdown-item" href="/user/mylistings">My Listings</a></li>
            <li><a class="dropdown-item" href="/user/mybookings">My Bookings</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
          </ul>
        </div>
      <% } else { %>
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="guestDropdown" role="button"
             data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa-solid fa-user-circle fa-2x text-secondary"></i>
          </a>
          <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="guestDropdown">
            <li><a class="dropdown-item" href="/listings/auth">Login</a></li>
            <li><a class="dropdown-item" href="/listings/auth">Sign Up</a></li>
          </ul>
        </div>
      <% } %>
    </div>

  </div>
</nav>


